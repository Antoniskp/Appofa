# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=newsapp
DB_USER=postgres
DB_PASSWORD=password

# JWT Secret
JWT_SECRET=your-secret-key-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=development

# Test Database (optional - defaults to in-memory SQLite)
# TEST_DB_STORAGE=:memory:

# Frontend Configuration
# Backend API URL for frontend (defaults to http://localhost:3000 if not set)
NEXT_PUBLIC_API_URL=http://localhost:3000
# Internal API URL for server-side proxy (defaults to http://localhost:3000 if not set)
API_URL=http://localhost:3000

# OAuth Configuration
# GitHub OAuth (get credentials from https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Google OAuth (get credentials from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Frontend URL for redirects after OAuth
FRONTEND_URL=http://localhost:3001

# Google Analytics (optional)
# Get your Measurement ID from https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
