# Staging Environment Configuration
# This file should be copied to .env.staging on the VPS

# IMPORTANT: This is a STAGING/NON-PRODUCTION environment
NODE_ENV=staging

# Database Configuration (Reusing production PostgreSQL database/user)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=newsapp
DB_USER=newsapp_user
DB_PASSWORD=CHANGE_THIS_TO_PRODUCTION_PASSWORD

# JWT Secret (use production secret or separate staging secret)
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION

# Server Configuration
# Backend runs on port 3002 for staging (production uses 3000)
PORT=3002

# Frontend Configuration
# Staging domain - accessible at https://staging.appofasi.gr
NEXT_PUBLIC_API_URL=https://staging.appofasi.gr/api
# Internal API URL for server-side proxy
API_URL=http://localhost:3002

# OAuth Configuration
# GitHub OAuth for staging (requires separate OAuth app)
GITHUB_CLIENT_ID=your-staging-github-client-id
GITHUB_CLIENT_SECRET=your-staging-github-client-secret
GITHUB_CALLBACK_URL=https://staging.appofasi.gr/api/auth/github/callback

# Frontend URL for redirects after OAuth
FRONTEND_URL=https://staging.appofasi.gr
